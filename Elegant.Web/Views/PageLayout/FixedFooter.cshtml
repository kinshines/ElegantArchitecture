<div class="note note-info">
    <p> To set fixed footer layout just apply <code>page-footer-fixed</code> class to the body element. </p>
</div>
<!-- END PAGE BASE CONTENT -->

@section scripts{
<script>
    $(function () {
        $('body').addClass('page-footer-fixed');
    })
</script>
}